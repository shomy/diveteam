<% if user_signed_in? %>
  <%= simple_form_for([question,answer]) do |f| %>
    <%= f.hidden_field :question_id %>
    <%= f.input :content, input_html: { preview: true, rows: 8},label: "回答を入力", error: 'エラーを表示する'  %>
    <%= f.button :submit, "回答する", class: "btn btn-info" %>
  <% end %>
  <br>
<% end %>
